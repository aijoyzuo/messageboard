// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // app 走 6543 (pgbouncer)
  directUrl = env("DIRECT_URL")     // CLI 走 5432
}

model Post {
  id        String   @id @default(cuid()) @db.Text
  author    String
  body      String
  createdAt DateTime @default(now())

  @@index([createdAt])
}
