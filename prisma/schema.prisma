generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // 給應用程式用（Vercel 連 6543 / PgBouncer）
  directUrl = env("DIRECT_URL")     // 給 migrate/db push 用（直連 5432）
}

model Post {
  id        String   @id @default(cuid()) @db.Text
  author    String   @default("Anonymous")
  body      String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
}
